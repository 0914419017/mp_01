/* pages/list/list.wxss */

/* 最外层scroll-view */
.container2 view {
    width: 100%;
    height: 100%;
    text-align: center;
    line-height: 50px;
}

/* scroll-view竖滑动的样式 */
.containerl view {
    width: 100px;
    height: 100px;
    text-align: center;
    line-height: 100px;
}

.containerl view:nth-child(1) {
    background-color: lightgreen;
}

.containerl view:nth-child(2) {
    background-color: lightskyblue;
}

.containerl view:nth-child(3) {
    background-color: lightpink;
}

.containerl {
    border: 1px solid red;
    width: 100px;
    height: 120px;
}


/* 轮播图的样式 */
.swiper-container {
    height: 150px;
}

.item {
    height: 100%;
    line-height: 150px;
    text-align: center;
}

swiper-item:nth-child(1) .item {
    background-color: lightgreen;
}

swiper-item:nth-child(2) .item {
    background-color: lightblue;
}

swiper-item:nth-child(3) .item {
    background-color: lightpink;
}

/* image图片组件 */
image{
    border: 1px solid red;
}

input{
    border: 1px solid rgb(64, 16, 235);
    margin: 5px;
    padding: 5px;
    border-radius: 3px;
}
/* 导入外部样式 */
@import "/common/common.wxss";
